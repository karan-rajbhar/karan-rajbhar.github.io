---
import '@fontsource/jost'
import BaseLayout from '../layouts/BaseLayout.astro';
import LatestArticle from '../components/LatestArticle.astro';
const pageTitle = "Karan Rajbhar";
---
<BaseLayout pageTitle={pageTitle}>
  <h1>Hi, I'm Karan</h1>

  <p>I'm a software developer who builds things on the internet. Currently working at <a href="https://www.treety.co/" target="_blank" class="treety-link">Treety</a>.</p>
  
  <p>Sometimes I share thoughts on <a href="https://www.x.com/karan_rajbhr" target="_blank">Twitter</a> and code on <a href="https://www.github.com/karan-rajbhar" target="_blank">GitHub</a>.</p>

  <LatestArticle />
</BaseLayout>

<style>
  .treety-link {
    color: var(--accent);
    font-weight: 500;
  }

  .dark .treety-link {
    color: var(--accent-dark);
  }

  .x{
    color: #black;
    font-family: Jost*;
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    line-height: 180%;
  }
  img{
    height: 18px;
    margin-bottom: -3px ;
  }

  .dark img{
    filter: invert(100%);
  }

  .github{
    color: #BBC6CC;
    font-family: Jost*;
    font-size: 18px;
    font-style: normal;
    font-weight: 500;
    line-height: 180%;
  }
</style>