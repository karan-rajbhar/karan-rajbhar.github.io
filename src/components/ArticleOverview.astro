---
import { DateTime } from "luxon";
const { title, url, pubDate, description } = Astro.props;

const publishDateFormatted =
  DateTime.fromJSDate(pubDate).toFormat("MMMM dd, yyyy");
---

<div class="article-overview">
  <time datetime={pubDate.toISOString()} class="article-date"
    >{publishDateFormatted}</time
  >
  <a href={url} class="article-title">
    <h2>{title}</h2>
  </a>
  <p class="description">{description}</p>
  <a class="read-more" href={url}>
    <span>Read article</span>
    <svg
      width="16"
      height="16"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <line x1="5" y1="12" x2="19" y2="12"></line>
      <polyline points="12 5 19 12 12 19"></polyline>
    </svg>
  </a>
</div>

<style>
  .article-overview {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
    margin-bottom: var(--spacing-xl);
    padding-bottom: var(--spacing-lg);
    border-bottom: 1px solid var(--border);
    transition: transform var(--transition-speed) var(--transition-ease);
  }

  .article-date {
    color: var(--text-muted);
    font-size: var(--font-size-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .article-title {
    text-decoration: none;
    color: var(--text);
  }

  .article-title h2 {
    font-size: var(--font-size-xl);
    margin: 0;
    transition: color var(--transition-speed) var(--transition-ease);
  }

  .article-overview:hover .article-title h2 {
    color: var(--accent);
  }

  .description {
    color: var(--text-secondary);
    font-size: var(--font-size-base);
    line-height: var(--line-height-base);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin: var(--spacing-xs) 0;
  }

  .read-more {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    color: var(--accent);
    font-size: var(--font-size-sm);
    font-weight: 600;
    text-decoration: none;
    margin-top: var(--spacing-xs);
    width: fit-content;
  }

  .read-more svg {
    transition: transform var(--transition-speed) var(--transition-ease);
  }

  .read-more:hover svg {
    transform: translateX(4px);
  }

  @media (max-width: 600px) {
    .article-overview {
      margin-bottom: var(--spacing-lg);
      padding-bottom: var(--spacing-md);
    }

    .article-title h2 {
      font-size: var(--font-size-lg);
    }
  }
</style>
