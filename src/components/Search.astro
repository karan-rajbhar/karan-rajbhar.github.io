---
import SearchField from "./SearchField.astro";
---

<div class="search-container">
  <SearchField className="site-search" placeholder="Search articles... (âŒ˜K)" />
</div>

<style>
  .search-container {
    position: relative;
    width: 100%;
    max-width: 400px;
    transition: all 0.3s ease;
  }

  /* Override pagefind UI styles to match site theme */
  :global(.pagefind-ui) {
    --pagefind-ui-scale: 1;
    --pagefind-ui-primary: #82F9A1;
    --pagefind-ui-text: #b8c1c7;
    --pagefind-ui-background: rgba(28, 42, 52, 0.95);
    --pagefind-ui-border: #4a5c6b;
    --pagefind-ui-tag: #4a5c6b;
    --pagefind-ui-border-width: 2px;
    --pagefind-ui-border-radius: 12px;
    --pagefind-ui-font: 'Jost', sans-serif;
    width: 100%;
    font-family: var(--pagefind-ui-font);
  }

  /* Search Input Styles */
  :global(.pagefind-ui .pagefind-ui__search-input) {
    width: 100%;
    padding: 14px 44px 14px 20px;
    border: 2px solid var(--pagefind-ui-border);
    border-radius: var(--pagefind-ui-border-radius);
    font-family: var(--pagefind-ui-font);
    font-size: 16px;
    background: var(--pagefind-ui-background);
    color: var(--pagefind-ui-text);
    outline: none;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
  }

  :global(.pagefind-ui .pagefind-ui__search-input:focus) {
    border-color: var(--pagefind-ui-primary);
    box-shadow: 0 0 0 4px rgba(130, 249, 161, 0.15);
    transform: translateY(-1px);
  }

  :global(.pagefind-ui .pagefind-ui__search-input::placeholder) {
    color: var(--pagefind-ui-text);
    opacity: 0.6;
  }

  :global(.pagefind-ui .pagefind-ui__search-clear) {
    width: 24px;
    height: 24px;
    top: 50%;
    transform: translateY(-50%);
    right: 16px;
    color: var(--pagefind-ui-text);
    opacity: 0.6;
    transition: all 0.2s ease;
    cursor: pointer;
    padding: 2px;
    border-radius: 50%;
  }

  :global(.pagefind-ui .pagefind-ui__search-clear:hover) {
    opacity: 1;
    color: var(--pagefind-ui-primary);
    background: rgba(130, 249, 161, 0.1);
  }

  /* Results Container */
  :global(.pagefind-ui .pagefind-ui__results-area) {
    position: absolute;
    top: calc(100% + 12px);
    left: 0;
    right: 0;
    margin-top: 0;
    padding: 16px;
    background: var(--pagefind-ui-background);
    border: 2px solid var(--pagefind-ui-border);
    border-radius: var(--pagefind-ui-border-radius);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.4);
    z-index: 1000;
    max-height: calc(90vh - var(--header-height));
    overflow-y: auto;
    backdrop-filter: blur(16px);
    animation: slideDown 0.2s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Results Count */
  :global(.pagefind-ui .pagefind-ui__results-area .pagefind-ui__message) {
    color: var(--pagefind-ui-text);
    font-size: 0.95em;
    padding: 8px 4px;
    margin-bottom: 12px;
    opacity: 0.8;
    border-bottom: 1px solid var(--pagefind-ui-border);
  }

  /* Individual Result */
  :global(.pagefind-ui .pagefind-ui__result) {
    padding: 16px;
    margin: 0 0 12px 0;
    border-radius: var(--pagefind-ui-border-radius);
    background: rgba(74, 92, 107, 0.15);
    border: 1px solid rgba(74, 92, 107, 0.2);
    transition: all 0.3s ease;
    cursor: pointer;
  }

  :global(.pagefind-ui .pagefind-ui__result:hover) {
    background: rgba(130, 249, 161, 0.1);
    border-color: var(--pagefind-ui-primary);
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  /* Result Title */
  :global(.pagefind-ui .pagefind-ui__result-title) {
    color: var(--pagefind-ui-primary);
    font-weight: 600;
    font-size: 1.2em;
    margin-bottom: 10px;
    display: block;
    text-decoration: none !important;
    line-height: 1.4;
  }

  :global(.pagefind-ui .pagefind-ui__result-title .pagefind-ui__result-link) {
    color: inherit;
    text-decoration: none !important;
    transition: all 0.2s ease;
  }

  :global(.pagefind-ui .pagefind-ui__result-link:hover) {
    text-decoration: none !important;
    opacity: 0.9;
  }

  /* Result Excerpt */
  :global(.pagefind-ui .pagefind-ui__result-excerpt) {
    font-size: 0.95em;
    line-height: 1.6;
    margin: 10px 0;
    color: var(--pagefind-ui-text);
    opacity: 0.9;
  }

  /* Highlight Matches */
  :global(.pagefind-ui mark) {
    background: rgba(130, 249, 161, 0.2);
    color: var(--pagefind-ui-primary);
    padding: 0 3px;
    border-radius: 3px;
    font-weight: 500;
  }

  /* Tags Section */
  :global(.pagefind-ui .pagefind-ui__result-tags) {
    margin-top: 12px;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  :global(.pagefind-ui .pagefind-ui__result-tag) {
    font-size: 0.85em;
    padding: 4px 10px;
    border-radius: 20px;
    background: rgba(130, 249, 161, 0.1);
    color: var(--pagefind-ui-primary);
    border: 1px solid var(--pagefind-ui-primary);
    transition: all 0.2s ease;
  }

  :global(.pagefind-ui .pagefind-ui__result-tag:hover) {
    background: rgba(130, 249, 161, 0.2);
    transform: translateY(-1px);
  }

  /* Scrollbar Styling */
  :global(.pagefind-ui .pagefind-ui__results-area::-webkit-scrollbar) {
    width: 8px;
  }

  :global(.pagefind-ui .pagefind-ui__results-area::-webkit-scrollbar-track) {
    background: transparent;
  }

  :global(.pagefind-ui .pagefind-ui__results-area::-webkit-scrollbar-thumb) {
    background: var(--pagefind-ui-border);
    border-radius: 20px;
    border: 2px solid var(--pagefind-ui-background);
  }

  :global(.pagefind-ui .pagefind-ui__results-area::-webkit-scrollbar-thumb:hover) {
    background: var(--pagefind-ui-primary);
  }

  /* Mobile Styles */
  @media (max-width: 768px) {
    .search-container {
      max-width: 100%;
      margin: 8px 0;
    }

    :global(.pagefind-ui .pagefind-ui__results-area) {
      position: fixed;
      top: var(--header-height);
      left: 0;
      right: 0;
      bottom: 0;
      margin: 0;
      height: calc(100vh - var(--header-height));
      max-height: none;
      border-radius: 0;
      border-left: none;
      border-right: none;
      border-bottom: none;
      padding: 20px;
      animation: slideUp 0.3s ease-out;
    }

    @keyframes slideUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    :global(.pagefind-ui .pagefind-ui__result) {
      padding: 20px;
      margin-bottom: 16px;
    }

    :global(.pagefind-ui .pagefind-ui__result-title) {
      font-size: 1.3em;
    }

    :global(.pagefind-ui .pagefind-ui__result-excerpt) {
      font-size: 1em;
      line-height: 1.6;
    }

    :global(.pagefind-ui .pagefind-ui__message) {
      padding: 16px 4px;
      text-align: center;
      font-size: 1em;
    }
  }
</style> 