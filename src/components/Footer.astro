---
import "@fontsource/jost";
import Social from "./Social.astro";
---

<footer>
        <p class="footer-text">Made with ❤️ by Karan Rajbhar</p>
      <div class="social-buttons">
        <Social platform="twitter" username="karan_rajbhr" />
        <Social platform="github" username="karan-rajbhar" />
  </div>
</footer>

<style>
  footer {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--spacing-md) var(--container-padding) var(--spacing-lg);
    border-top: 1px solid var(--border);
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    align-items: center;
  }

  .dark footer {
    border-top-color: var(--border-dark);
  }

  .footer-text {
    font-size: var(--font-size-sm);
    color: var(--text-light);
    margin: 0;
  }

  .dark .footer-text {
    color: var(--text-light-dark);
  }

  .social-buttons {
    display: flex;
    gap: var(--spacing-sm);
    align-items: center;
  }

  @media (max-width: 600px) {
    footer {
      padding: var(--spacing-md) var(--spacing-sm);
    }

    .footer-text {
      font-size: 12px;
    }
  }
</style>

