<script data-isso="https://issocomment.dionsyus.online/comments/" src="https://issocomment.dionsyus.online/comments/js/embed.min.js/"></script>
<div class="comment-section">
  <h2 class="comment-header">Comments</h2>
  <form class="comment-form">
    <textarea
      class="comment-textarea"
      placeholder="Type Comment Here (at least 3 chars)"
      required
      minlength="3"
    ></textarea>
    <div class="form-fields">
      <div class="form-field">
        <label class="form-label">Name (optional)</label>
        <input
          type="text"
          class="form-input"
          placeholder="Your name"
        />
      </div>
      <div class="form-field">
        <label class="form-label">E-mail (optional)</label>
        <input
          type="email"
          class="form-input"
          placeholder="your@email.com"
        />
      </div>
      <div class="form-field">
        <label class="form-label">Website (optional)</label>
        <input
          type="url"
          class="form-input"
          placeholder="https://example.com"
        />
      </div>
    </div>
    <div class="button-group">
      <button type="button" class="button preview-button">Preview</button>
      <button type="submit" class="button submit-button">Submit</button>
    </div>
  </form>
  <section id="isso-thread"></section>
</div>

<style>
  .comment-section {
    margin-top: var(--spacing-xl);
    padding: var(--spacing-lg);
    border-radius: 12px;
    background: var(--bg-secondary);
    border: 1px solid var(--border-color);
    box-shadow: var(--card-shadow);
  }

  .comment-header {
    font-size: var(--font-size-lg);
    color: var(--text-primary);
    margin-bottom: var(--spacing-md);
    font-weight: 600;
  }

  .comment-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-md);
  }

  .comment-textarea {
    width: 100%;
    min-height: 120px;
    padding: var(--spacing-md);
    border-radius: 8px;
    border: 1px solid var(--border-color);
    background: var(--bg-primary);
    color: var(--text-primary);
    font-family: inherit;
    font-size: var(--font-size-sm);
    resize: vertical;
    transition: all var(--transition-speed) ease;
  }

  .comment-textarea:focus {
    outline: none;
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 2px var(--accent-primary-alpha);
  }

  .comment-textarea::placeholder {
    color: var(--text-secondary);
    opacity: 0.7;
  }

  .form-fields {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
  }

  .form-field {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .form-label {
    font-size: var(--font-size-sm);
    color: var(--text-primary);
    font-weight: 500;
  }

  .form-input {
    width: 100%;
    padding: var(--spacing-sm) var(--spacing-md);
    border-radius: 6px;
    border: 1px solid var(--border-color);
    background: var(--bg-primary);
    color: var(--text-primary);
    font-size: var(--font-size-sm);
    transition: all var(--transition-speed) ease;
  }

  .form-input:focus {
    outline: none;
    border-color: var(--accent-primary);
    box-shadow: 0 0 0 2px var(--accent-primary-alpha);
  }

  .form-input::placeholder {
    color: var(--text-secondary);
    opacity: 0.7;
  }

  .button-group {
    display: flex;
    gap: var(--spacing-md);
    justify-content: flex-end;
    margin-top: var(--spacing-md);
  }

  .button {
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: 6px;
    font-size: var(--font-size-sm);
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-speed) ease;
    border: 1px solid var(--border-color);
  }

  .preview-button {
    background: var(--bg-primary);
    color: var(--text-primary);
  }

  .preview-button:hover {
    background: var(--bg-secondary);
    border-color: var(--accent-primary);
  }

  .submit-button {
    background: var(--accent-primary);
    color: white;
    border-color: var(--accent-primary);
  }

  .submit-button:hover {
    opacity: 0.9;
    transform: translateY(-1px);
  }

  @media (max-width: 600px) {
    .form-fields {
      grid-template-columns: 1fr;
    }
    .button-group {
      flex-direction: column;
    }
    .button {
      width: 100%;
      text-align: center;
    }
  }
</style>