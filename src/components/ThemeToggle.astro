<button class="theme-toggle" aria-label="Toggle dark mode">
  <svg
    class="sun-icon"
    xmlns="http://www.w3.org/2000/svg"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <circle cx="12" cy="12" r="5"></circle>
    <line x1="12" y1="1" x2="12" y2="3"></line>
    <line x1="12" y1="21" x2="12" y2="23"></line>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
    <line x1="1" y1="12" x2="3" y2="12"></line>
    <line x1="21" y1="12" x2="23" y2="12"></line>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
  </svg>
  <svg
    class="moon-icon"
    xmlns="http://www.w3.org/2000/svg"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
  </svg>
</button>

<script>
  // Theme initialization is handled by the layout, so we don't need it here

  const handleToggleClick = () => {
    const element = document.documentElement;
    const button = document.querySelector(".theme-toggle") as HTMLElement;

    // Add a brief animation class for the transition
    button?.classList.add("transitioning");

    const isDark = !element.classList.contains("dark");

    if (isDark) {
      element.classList.add("dark");
      element.setAttribute("data-theme", "dark");
    } else {
      element.classList.remove("dark");
      element.setAttribute("data-theme", "light");
    }

    localStorage.setItem("theme", isDark ? "dark" : "light");

    // Remove animation class after transition
    setTimeout(() => {
      button?.classList.remove("transitioning");
    }, 300);
  };

  const initThemeToggle = () => {
    const themeToggle = document.querySelector(".theme-toggle");
    if (themeToggle && !themeToggle.hasAttribute("data-initialized")) {
      themeToggle.addEventListener("click", handleToggleClick);
      themeToggle.setAttribute("data-initialized", "true");
    }
  };

  // Only initialize once when the component loads
  document.addEventListener("DOMContentLoaded", initThemeToggle);
  document.addEventListener("astro:page-load", initThemeToggle);
</script>

<style>
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    background: transparent;
    border: none;
    color: var(--text-light);
    cursor: pointer;
    transition: all var(--transition-speed) cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    border-radius: 50%;
    overflow: hidden;
  }

  .theme-toggle:hover {
    color: var(--accent);
    background: var(--bg-secondary);
    transform: scale(1.1);
  }

  .theme-toggle:active {
    transform: scale(0.95);
  }

  .theme-toggle.transitioning {
    animation: themeTransition 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes themeTransition {
    0% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
    100% {
      transform: scale(1);
    }
  }

  .dark .theme-toggle {
    color: var(--text-light-dark);
  }

  .dark .theme-toggle:hover {
    color: var(--accent-dark);
  }

  .sun-icon,
  .moon-icon {
    width: 20px;
    height: 20px;
    position: absolute;
    transition: all var(--transition-speed) cubic-bezier(0.4, 0, 0.2, 1);
  }

  .sun-icon {
    opacity: 0;
    transform: rotate(-90deg) scale(0.8);
  }

  :global(.dark) .sun-icon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  .moon-icon {
    opacity: 1;
    transform: rotate(0deg) scale(1);
  }

  :global(.dark) .moon-icon {
    opacity: 0;
    transform: rotate(90deg) scale(0.8);
  }

  @media (max-width: 600px) {
    .theme-toggle {
      padding: 0.75rem;
      min-width: 44px;
      min-height: 44px;
    }

    .theme-toggle:hover {
      transform: none;
      background: var(--bg-secondary);
    }

    .sun-icon,
    .moon-icon {
      width: 22px;
      height: 22px;
    }
  }
</style>

