---
import { Image } from 'astro:assets';

export interface Props {
  src: any;
  alt: string;
  width?: number;
  height?: number;
  sizes?: string;
  loading?: 'lazy' | 'eager';
  class?: string;
  widths?: number[];
  format?: 'avif' | 'webp' | 'jpeg' | 'png';
  quality?: number;
}

const {
  src,
  alt,
  width,
  height,
  sizes = '(max-width: 768px) 100vw, (max-width: 1200px) 50vw, 33vw',
  loading = 'lazy',
  class: className = '',
  widths = [400, 800, 1200],
  format = 'webp',
  quality = 85
} = Astro.props;
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  sizes={sizes}
  loading={loading}
  class={className}
  widths={widths}
  format={format}
  quality={quality}
/> 