---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import SearchOverlay from '../components/SearchOverlay.astro';
import SEO from '../components/SEO.astro';
import '../styles/global.css';

interface Props {
  pageTitle: string;
  description?: string;
  image?: string;
  noindex?: boolean;
  type?: 'website' | 'article';
}

const { 
  pageTitle,
  description = "Karan Rajbhar's personal website and blog. Software developer sharing insights on web development, technology, and coding.",
  image,
  noindex = false,
  type = 'website'
} = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/icon.ico" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <SEO 
      title={pageTitle}
      description={description}
      image={image}
      noindex={noindex}
      type={type}
    />
  </head>
  <body>
    <Header />
    <main class="main-content">
        <slot />
    </main>
    <Footer />
    <SearchOverlay />
  </body>
</html>

<style>
  .main-content {
    padding-top: calc(var(--header-height) + var(--spacing-xl));
  }

  .page-header {
    margin-bottom: var(--spacing-lg);
  }

  .page-content {
    width: 100%;
  }

  @media (max-width: 600px) {
    .main-content {
      padding-top: calc(var(--header-height) + var(--spacing-md));
    }

    .page-header {
      margin-bottom: var(--spacing-md);
    }
  }
</style>
